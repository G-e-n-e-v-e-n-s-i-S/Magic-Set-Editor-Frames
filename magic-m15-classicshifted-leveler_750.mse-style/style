		image:				{ set_alpha(set_combine((if is_stamped() then "clear_masks" else "clear_masks_nonstamp") + "/devoid_screen" + (if is_notched() then "_transform.png" else ".png"), combine: "screen"), alpha:0.75) }
		mask:				{ (if is_stamped() then "clear_masks" else "clear_masks_nonstamp") + "/devoid_textbox_mask" + (if is_notched() then "_transform.png" else ".png") }
